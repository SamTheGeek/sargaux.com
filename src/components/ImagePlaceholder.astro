---
interface Props {
  name: string;
  description: string;
  aspectRatio?: string;
  folder?: string;
}

const {
  name,
  description,
  aspectRatio = '16/9',
  folder = ''
} = Astro.props;

const filename = folder ? `${folder}/${name}` : name;
---

<div class="image-placeholder" style={`aspect-ratio: ${aspectRatio};`}>
  <div class="placeholder-content">
    <span class="placeholder-icon">ðŸ–¼</span>
    <span class="placeholder-name">{filename}</span>
    <span class="placeholder-description">{description}</span>
  </div>
</div>

<style>
  .image-placeholder {
    background: #f5f5f5;
    border: 2px dashed #ccc;
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    width: 100%;
  }

  .placeholder-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 0.5rem;
    max-width: 80%;
  }

  .placeholder-icon {
    font-size: 2rem;
    opacity: 0.5;
  }

  .placeholder-name {
    font-family: monospace;
    font-size: 0.875rem;
    color: #666;
    background: #e5e5e5;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
  }

  .placeholder-description {
    font-size: 0.875rem;
    color: #555; /* WCAG AA compliant contrast */
    line-height: 1.4;
  }
</style>
