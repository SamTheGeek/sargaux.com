---
import WireframeLayout from '../layouts/WireframeLayout.astro';
import ImagePlaceholder from '../components/ImagePlaceholder.astro';
import { getAuthenticatedGuest } from '../lib/auth';

// If already logged in, redirect to NYC (default event)
const guest = getAuthenticatedGuest(Astro.cookies);
if (guest) {
  return Astro.redirect('/nyc');
}
---

<WireframeLayout title="Homepage">
  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-image">
        <ImagePlaceholder
          name="hero-main"
          folder="hero"
          description="Full-width couple photo — candid moment, engagement-style, or favorite photo together. Should feel warm and inviting."
          aspectRatio="21/9"
        />
      </div>
      <div class="hero-content">
        <p class="content-label">Site Title</p>
        <h1>Chez Sargaux</h1>
        <p class="content-label">Couple Names</p>
        <p class="tagline">Sam & Margaux</p>
        <p class="content-label">Call to Action</p>
        <div class="cta-area">
          <button class="cta" id="login-trigger">Enter</button>
        </div>
      </div>
    </section>

    <!-- Optional: Teaser Section -->
    <section class="teaser">
      <div class="content-box">
        <h3>Optional Section: Teaser/Preview</h3>
        <p>Could include a brief welcome message visible before login, e.g.:</p>
        <ul>
          <li>"We're getting married!"</li>
          <li>A hint about the two celebrations</li>
          <li>Or keep it minimal — just the hero and login</li>
        </ul>
        <p><em>Decision: Keep or remove this section?</em></p>
      </div>
    </section>
  </main>

  <!-- Login Modal -->
  <div class="modal-backdrop" id="login-modal" aria-hidden="true">
    <div class="modal" role="dialog" aria-labelledby="modal-title" aria-modal="true">
      <button class="modal-close" id="modal-close" aria-label="Close">&times;</button>

      <h2 id="modal-title">Welcome</h2>
      <p class="modal-subtitle">Please enter your name to continue</p>

      <form id="login-form">
        <label for="name" class="visually-hidden">Your name</label>
        <input
          type="text"
          id="name"
          name="name"
          placeholder="Your name"
          autocomplete="off"
          autocapitalize="words"
          spellcheck="false"
          required
        />
        <div id="error-message" class="error-message" aria-live="polite"></div>
        <button type="submit" class="submit-btn" id="submit-btn">Continue</button>
      </form>
    </div>
  </div>

  <footer>
    <p>&copy; 2026 Sam Gross</p>
  </footer>


  <style>
  main {
    flex: 1;
  }

  /* Hero Section */
  .hero {
    display: flex;
    flex-direction: column;
  }

  .hero-image {
    width: 100%;
  }

  .hero-content {
    padding: 3rem 2rem;
    text-align: center;
  }

  h1 {
    font-size: 3.5rem;
    font-weight: 300;
    letter-spacing: 0.1em;
    margin-bottom: 0.5rem;
  }

  .tagline {
    font-size: 1.5rem;
    color: #666;
    margin-bottom: 2rem;
  }

  .cta-area {
    margin-top: 1rem;
  }

  .cta {
    display: inline-block;
    padding: 1rem 2.5rem;
    font-size: 1rem;
    color: #1a1a1a;
    background: transparent;
    border: 2px solid #1a1a1a;
    border-radius: 0.5rem;
    cursor: pointer;
    transition: all 0.2s;
  }

  .cta:hover {
    background: #1a1a1a;
    color: white;
  }

  /* Teaser Section */
  .teaser {
    padding: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .teaser ul {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  .teaser li {
    margin-bottom: 0.5rem;
  }

  .teaser em {
    color: #f59e0b;
    font-weight: 600;
  }

  /* Modal */
  .modal-backdrop {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1001;
    padding: 1rem;
    opacity: 1;
    transition: opacity 0.2s;
  }

  .modal-backdrop[aria-hidden="true"] {
    opacity: 0;
    pointer-events: none;
  }

  .modal {
    background: white;
    border-radius: 0.75rem;
    padding: 2rem;
    max-width: 400px;
    width: 100%;
    position: relative;
    transform: scale(1);
    transition: transform 0.2s;
  }

  .modal-backdrop[aria-hidden="true"] .modal {
    transform: scale(0.95);
  }

  .modal-close {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    color: #888;
    width: 2rem;
    height: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
  }

  .modal-close:hover {
    background: #f5f5f5;
    color: #1a1a1a;
  }

  .modal h2 {
    font-size: 1.75rem;
    font-weight: 300;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
    text-align: center;
  }

  .modal-subtitle {
    color: #666;
    text-align: center;
    margin-bottom: 1.5rem;
    font-size: 0.9375rem;
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  input {
    padding: 0.875rem 1rem;
    font-size: 1rem;
    border: 1px solid #e5e5e5;
    border-radius: 0.5rem;
    text-align: center;
  }

  input:focus {
    outline: none;
    border-color: #1a1a1a;
  }

  .error-message {
    color: #dc2626;
    font-size: 0.875rem;
    text-align: center;
    min-height: 1.25rem;
  }

  .submit-btn {
    padding: 0.875rem 1rem;
    font-size: 1rem;
    background: #1a1a1a;
    color: white;
    border: none;
    border-radius: 0.5rem;
    cursor: pointer;
  }

  .submit-btn:hover:not(:disabled) {
    background: #333;
  }

  .submit-btn:disabled {
    background: #888;
    cursor: not-allowed;
  }

  /* Footer */
  footer {
    padding: 2rem;
    text-align: center;
    border-top: 1px solid #e5e5e5;
  }

  footer p {
    font-size: 0.875rem;
    color: #666;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2.5rem;
    }

    .tagline {
      font-size: 1.25rem;
    }
  }
  </style>
</WireframeLayout>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    var modal = document.getElementById('login-modal');
    var trigger = document.getElementById('login-trigger');
    var closeBtn = document.getElementById('modal-close');
    var nameInput = document.getElementById('name');
    var form = document.getElementById('login-form');
    var errorMessage = document.getElementById('error-message');
    var submitBtn = document.getElementById('submit-btn');

    function openModal() {
      if (modal) modal.setAttribute('aria-hidden', 'false');
      document.body.style.overflow = 'hidden';
      if (nameInput) nameInput.focus();
    }

    function closeModal() {
      if (modal) modal.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';
      if (errorMessage) errorMessage.textContent = '';
    }

    function showError(message) {
      if (errorMessage) {
        errorMessage.textContent = message;
      }
    }

    if (trigger) trigger.addEventListener('click', openModal);
    if (closeBtn) closeBtn.addEventListener('click', closeModal);

    // Close on backdrop click
    if (modal) {
      modal.addEventListener('click', function(e) {
        if (e.target === modal) closeModal();
      });
    }

    // Close on Escape
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && modal && modal.getAttribute('aria-hidden') === 'false') {
        closeModal();
      }
    });

    // Handle form submission
    if (form) {
      form.addEventListener('submit', async function(e) {
        e.preventDefault();

        var name = nameInput ? nameInput.value.trim() : '';
        if (!name) {
          showError('Please enter your name');
          return;
        }

        // Disable button while submitting
        if (submitBtn) {
          submitBtn.disabled = true;
          submitBtn.textContent = 'Checking...';
        }

        try {
          var formData = new FormData();
          formData.append('name', name);

          var response = await fetch('/api/login', {
            method: 'POST',
            body: formData,
          });

          var data = await response.json();

          if (response.ok) {
            // Redirect to NYC event page on success
            window.location.href = '/nyc';
          } else {
            showError(data.error || 'Something went wrong. Please try again.');
            if (submitBtn) {
              submitBtn.disabled = false;
              submitBtn.textContent = 'Continue';
            }
          }
        } catch (error) {
          showError('Something went wrong. Please try again.');
          if (submitBtn) {
            submitBtn.disabled = false;
            submitBtn.textContent = 'Continue';
          }
        }
      });
    }
  });
</script>
