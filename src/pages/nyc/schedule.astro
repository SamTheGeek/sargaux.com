---
import WireframeLayout from '../../layouts/WireframeLayout.astro';
---

<WireframeLayout title="NYC Schedule">
  <header>
    <nav class="main-nav">
      <a href="/" class="logo">Chez Sargaux</a>
      <a href="/nyc" class="back-link">‚Üê Back to NYC</a>
    </nav>
  </header>

  <main>
    <h1>Schedule</h1>
    <p class="subtitle">October 11, 2026</p>

    <section class="timeline">
      <div class="content-box timeline-item">
        <h3>Timeline Item Template</h3>
        <p class="time">[Time TBD]</p>
        <p class="event-name"><strong>[Event Name]</strong></p>
        <p class="location">üìç [Venue Name]</p>
        <p class="description">[Brief description of what happens]</p>
      </div>

      <div class="content-box">
        <h3>Expected Schedule Structure</h3>
        <ul>
          <li><strong>Cocktails</strong> ‚Äî Start time, venue, duration</li>
          <li><strong>Dinner</strong> ‚Äî Seated dinner details</li>
          <li><strong>Transition</strong> ‚Äî How guests move to next venue</li>
          <li><strong>Dancing</strong> ‚Äî Second venue, end time</li>
        </ul>
        <p class="note"><em>Note: Times and venues TBD</em></p>
      </div>
    </section>
  </main>

  <footer>
    <p>&copy; 2026 Sam Gross</p>
  </footer>
</WireframeLayout>

<style>
  header {
    border-bottom: 1px solid #e5e5e5;
  }

  .main-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .logo {
    font-size: 1.25rem;
    font-weight: 300;
    letter-spacing: 0.05em;
    text-decoration: none;
    color: #1a1a1a;
  }

  .back-link {
    font-size: 0.875rem;
    color: #666;
    text-decoration: none;
  }

  .back-link:hover {
    color: #1a1a1a;
  }

  main {
    flex: 1;
    padding: 3rem 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 300;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: #666;
    margin-bottom: 3rem;
  }

  .timeline {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .timeline-item .time {
    font-size: 0.875rem;
    color: #888;
    margin-bottom: 0.25rem;
  }

  .timeline-item .location {
    font-size: 0.875rem;
    color: #666;
    margin-top: 0.5rem;
  }

  .timeline-item .description {
    font-size: 0.875rem;
    color: #888;
    margin-top: 0.25rem;
  }

  .content-box ul {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  .content-box li {
    margin-bottom: 0.5rem;
  }

  .note {
    font-size: 0.75rem;
    color: #f59e0b;
  }

  footer {
    padding: 2rem;
    text-align: center;
    border-top: 1px solid #e5e5e5;
  }

  footer p {
    font-size: 0.875rem;
    color: #888;
  }
</style>
